<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioGroup android:layout_marginBottom="20dp" android:layout_marginTop="20dp" android:id="@+id/radiogroup"  android:layout_width="wrap_content" android:layout_height="32dp" android:layout_centerHorizontal="true" android:background="@drawable/radio_btn_frame" android:orientation="horizontal">

            <RadioButton
                android:id="@+id/menu_1"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/radios_btn_left"
                android:button="@null"
                android:gravity="center"
                android:text="进程"
                android:checked="true"
                android:textColor="@drawable/radio_btn_txt_color"/>
            <ImageView android:layout_width="1dp" android:layout_height="match_parent" android:background="@color/btn_pressed_false_blue"/>
            <RadioButton
                android:id="@+id/menu_2"
                android:text="任务"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textColor="@drawable/radio_btn_txt_color"
                android:background="@drawable/radios_btn_center"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:button="@null"/>
            <ImageView android:layout_width="1dp" android:layout_height="match_parent" android:background="@color/btn_pressed_false_blue"/>
            <RadioButton
                android:id="@+id/menu_3"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/radios_btn_right"
                android:button="@null"
                android:gravity="center"
                android:text="服务"
                android:textColor="@drawable/radio_btn_txt_color"/>
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <ListView android:layout_weight="1" android:id="@+id/listview" android:divider="@null" android:layout_width="match_parent" android:layout_height="match_parent">

        </ListView>
        <RelativeLayout android:id="@+id/bottom_holder" android:layout_weight="0" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="50dp">
            <Button android:clickable="true" android:text="全部关闭" android:textColor="#ffffff" android:background="@drawable/button_select" android:layout_centerVertical="true" android:layout_marginLeft="30dp" android:layout_width="120dp" android:layout_height="33dp"/>
            <Button android:clickable="true" android:text="刷新" android:textColor="#ffffff" android:background="@drawable/button_select" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="30dp" android:layout_width="120dp" android:layout_height="33dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
